{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "rootDir": "src",
        "jsx": "react",
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src",
        "paths": {
            "components/*": ["./components/*"]
        },
        "outDir": "dist",
        "inlineSourceMap": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "data",
        "externals"
    ]
}
