{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "rootDir": "src",
        "jsx": "react",
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src",
        "paths": {
            "components/*": ["./src/components/*"],
            "containers/*": ["./src/containers/*"]
        }
    },
    "exclude": [
        "node_modules",
        "out",
        "dangerfile.js",
        "data",
        "externals"
    ]
}
