{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "src",
    "jsx": "react",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "outDir": "dist",
    "noUnusedLocals": true,
    "experimentalDecorators": true
  },
  "include": ["typings/*.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "data", "externals", "danger"]
}
