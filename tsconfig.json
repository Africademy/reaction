{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "rootDir": "src",
        "jsx": "react",
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src",
        "outDir": "dist"
    },
    "awesomeTypescriptLoaderOptions": {
        "silent": false,
        "useBabel": true,
        "babelOptions": {
            "presets": [
                "es2015",
                "stage-3",
                "react"
            ],
            "plugins": [
                "react-relay"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "data",
        "externals"
    ]
}
